<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment_home">

    <ScrollView
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnplannew"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_tag"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_plan"
            android:textAlignment="center" />

        <TextView
            android:fontFamily="@font/opensans_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Plan"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btnkunjungan"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_newplan"/>

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kunjungan Plan"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnpo"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_po"/>

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Input PO"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnunplan"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_unplan"
                    android:textAlignment="center" />

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Unplan"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnlistplan"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="33dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_time"
                    android:textAlignment="center" />

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kunjungan Berhasil"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnlistoutlet"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_list"/>

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar Outlet"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnso"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_list"/>

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SO"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnstok"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_list"/>

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stok Produk"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:text="performa plan/unplan minggu ini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:id="@+id/cvriwayat"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:background="@drawable/gradiant"
                android:id="@+id/tvplan"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="performa plan 0%"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/tvunplan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradiant"
                    android:backgroundTint="@color/btnDanger"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="performa unplan 0%"
                    android:textColor="@color/colorWhite" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>